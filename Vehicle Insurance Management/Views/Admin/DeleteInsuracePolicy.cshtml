@model Vehicle_Insurance_Management.Models.insurancepolicy

@{
    ViewData["Title"] = "Delete";
    Layout = "_Admin_Layout";

}

<div class="content-body">
    <div class="container-fluid">


        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PolicyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PolicyType)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PolicyDescription)
                </dt>
       
               
            </dl>

            <form asp-action="CDeleteInsuracePolicy" asp-route-id="@Model.Id">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />

            </form>
        </div>
    </div>
</div>
