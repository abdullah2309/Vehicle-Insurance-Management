@model IEnumerable<Vehicle_Insurance_Management.Models.BillingInformation>

@{
    Layout = "_Admin_Layout";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Billing Information</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.BillNo)</th>
                                    <th>Customer Name</th>
                                    <th>@Html.DisplayNameFor(model => model.Policynumber)</th>
                                    <th>Vehicle</th>
                                    <th>@Html.DisplayNameFor(model => model.CustomerPhoneNumber)</th>
                                    <th>@Html.DisplayNameFor(model => model.CustomerEmail)</th>
                                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                                    <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var bill in Model)
                                    {
                                        <tr>
                                            <td>@bill.BillNo</td>
                                            <td>@(bill.Customer != null ? bill.Customer.Name : "N/A")</td>
                                            <td>@bill.Policynumber</td>
                                            <td>@(bill.Vehicle != null ? bill.Vehicle.VehicleName : "N/A")</td>
                                            <td>@bill.CustomerPhoneNumber</td>
                                            <td>@bill.CustomerEmail</td>
                                            <td>@bill.Date.ToString("yyyy-MM-dd")</td>
                                            <td>@bill.Amount</td>
                                            <td>
                                                <form asp-action="DeleteBilling"  method="post" onsubmit="return confirm('Are you sure you want to delete this billing record?');">
                                                    <input type="hidden" name="id" value="@bill.BillNo" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">No billing records found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
