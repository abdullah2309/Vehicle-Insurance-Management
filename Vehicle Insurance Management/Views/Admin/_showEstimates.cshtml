@model IEnumerable<Vehicle_Insurance_Management.Models.Estimate>




        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Estimate Information</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.VehicleName)</th>
                                    <th>@Html.DisplayNameFor(model => model.VehicleModel)</th>
                                    <th>@Html.DisplayNameFor(model => model.VehicleRate)</th>
                                    <th>@Html.DisplayNameFor(model => model.VehicleWarranty)</th>
                                    <th>@Html.DisplayNameFor(model => model.VehiclePolicyType)</th>
                                    <th>Customer Id</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var estimate in Model)
                                    {
                                        <tr>
                                            <td>@estimate.VehicleName</td>
                                            <td>@estimate.VehicleModel</td>
                                            <td>@estimate.VehicleRate</td>
                                            <td>@estimate.VehicleWarranty</td>
                                            <td>@estimate.VehiclePolicyType</td>
                                    <td>@estimate.CustomerId</td>

                                            <td>
                                                
                                                <form asp-action="DeleteEstimate" method="post" onsubmit="return confirm('Are you sure you want to delete this estimate?');" style="display:inline;">
                                                    <input type="hidden" name="id" value="@estimate.EstimateId" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No estimates found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

