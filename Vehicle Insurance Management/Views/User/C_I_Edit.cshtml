@model Vehicle_Insurance_Management.Models.Customer_Information
@{
    Layout = "_user_panel";
}

<div class="flex-1 p-8">
    <div class="bg-white p-6 rounded-lg shadow-lg ">
        <h1 class="text-3xl font-extrabold  mb-6 text-center">Edit Customer Information</h1>

        <form method="post" asp-action="C_I_Edit">
            <input type="hidden" asp-for="Id" /> 

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 font-semibold">Name</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Name" type="text" required />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Address</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Address" type="text" required />
                    <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Phone Number</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="PhoneNumber" type="text" required />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">CNIC</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="CNIC" type="text" required />
                    <span asp-validation-for="CNIC" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Date of Issue</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="DateOfIssue" type="date" required />
                    <span asp-validation-for="DateOfIssue" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Date of Expiry</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="DateOfExpiry" type="date" required />
                    <span asp-validation-for="DateOfExpiry" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Date of Birth</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="DateOfBirth" type="date" required />
                    <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Sex</label>
                    <select class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Sex">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6 flex justify-center">
                <button type="submit" class="flex items-center bg-blue-700 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-800 transition duration-200">
                    <i class="fas fa-save mr-2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
