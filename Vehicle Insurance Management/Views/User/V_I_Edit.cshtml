@model Vehicle_Insurance_Management.Models.Vehicle_Information
@{
    Layout = "_user_panel";
}

<div class="flex-1 p-8">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-3xl font-extrabold mb-6 text-center">Edit Vehicle Information</h1>

        <form method="post" asp-action="V_I_Edit">
            <input type="hidden" asp-for="VehicleId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 font-semibold">Vehicle Name</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="VehicleName" type="text" required />
                    <span asp-validation-for="VehicleName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Owner Name</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="OwnerName" type="text" required />
                    <span asp-validation-for="OwnerName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Model</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Model" type="text" required />
                    <span asp-validation-for="Model" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Version</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Version" type="text" required />
                    <span asp-validation-for="Version" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Rate</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="Rate" type="number" required />
                    <span asp-validation-for="Rate" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Body Number</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="BodyNumber" type="text" required />
                    <span asp-validation-for="BodyNumber" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Engine Number</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="EngineNumber" type="text" required />
                    <span asp-validation-for="EngineNumber" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block text-gray-700 font-semibold">Vehicle Number</label>
                    <input class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" asp-for="VehicleNumber" type="text" required />
                    <span asp-validation-for="VehicleNumber" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-6 flex justify-center">
                <button type="submit" class="flex items-center bg-blue-700 text-white px-6 py-2 rounded-lg shadow-md hover:bg-blue-800 transition duration-200">
                    <i class="fas fa-save mr-2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
