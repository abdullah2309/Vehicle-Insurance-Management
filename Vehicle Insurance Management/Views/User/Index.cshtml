<!-- Main Content -->
<div class="flex-1 p-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800"></h1>

    </div>

    <!-- Vehicles Grid -->
    <!-- Hero Section -->
    <header class="text-center py-20 bg-blue-600 text-white">
