@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Vehicles</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="bg-blue-700 text-white w-64 p-6">
            <div class="flex items-center mb-8">
                <!-- <img alt="Profile picture" class="rounded-full w-12 h-12 mr-3" src="https://storage.googleapis.com/a1aa/image/aCmquQIEzDIvNUBn2IL6z4O9ZeGbLeiRo0vf8RflcBA.jpg"/> -->
                <div>
                    <p class="text-lg">Hello</p>
                   
                    @{
                        var userEmail = HttpContextAccessor.HttpContext?.Session.GetString("User_Email");
                    }

                    @if (!string.IsNullOrEmpty(userEmail))
                    {
                        <p class="text-xl font-bold">@userEmail</p>
                    }

                </div>
            </div>
            <br>
            <nav class="space-y-4">

                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="Index"><i class="fas fa-tachometer-alt"></i> <span>Home</span></a>
                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="CustomerInformation"><i class="fas fa-file-alt"></i> <span>Customer Information</span></a>
                <a class="flex items-center space-x-2 text-white" asp-controller="User" asp-action="VehicleInformation"><i class="fas fa-car"></i><span>Vehicles Information</span></a>
                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="InsuranceProcess"><i class="fas fa-briefcase"></i> <span>Insurance Process</span></a>
                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="BillingInformation">
                    <i class="fas fa-credit-card"></i>
                    <span>Bill</span>
                </a>

                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="ClaimDetails">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <span>Claim Details</span>
                </a>

                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="User" asp-action="Feedback">
                    <i class="fas fa-comment-alt"></i>
                    <span>Feedback</span>
                </a>
                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="Home" asp-action="Index">
                      <i class="fas fa-globe text-white"></i>
                    <span>Black to Website</span>
                </a>



             
                <a class="flex items-center space-x-2 text-blue-200 hover:text-white" asp-controller="Home" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                </a>


            </nav>
            <!-- <button class="mt-8 bg-white text-blue-700 py-2 px-4 rounded-full">Add Member</button> -->
        </div>
        @RenderBody()

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (For Bootstrap 4) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>
</html>






